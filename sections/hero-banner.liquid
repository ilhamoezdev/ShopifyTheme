<div class="hero-section">
  <div class="container">
    <div class="row align-items-center min-vh-100">
      <div class="col-lg-6 hero-content animate-fade-in-up">
        <div class="mb-4">
          <span class="badge bg-accent text-dark px-4 py-2 rounded-pill mb-3">Premium Artisan Baklava</span>
          {% if section.settings.heading != blank %}
            <h1 class="display-1 fw-bold mb-4">
              {{ section.settings.heading }}
            </h1>
          {% endif %}
        </div>

        {% if section.settings.text != blank %}
          <p class="lead mb-4">
            {{ section.settings.text }}
          </p>
        {% endif %}

        <div class="d-flex flex-column flex-sm-row gap-3 mb-5">
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="btn btn-accent btn-lg animate-glow">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
          {% if section.settings.secondary_button_label != blank and section.settings.secondary_button_link != blank %}
            <a href="{{ section.settings.secondary_button_link }}" class="btn btn-outline-light btn-lg">
              {{ section.settings.secondary_button_label }}
            </a>
          {% endif %}
        </div>

        <!-- Trust Indicators -->
        <div class="d-flex flex-wrap gap-4">
          <div class="d-flex align-items-center gap-3">
            <div class="bg-accent rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" class="text-dark">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <div>
              <div class="fw-semibold text-white">5.0 Rating</div>
              <div class="text-white-50 small">500+ Reviews</div>
            </div>
          </div>
          <div class="d-flex align-items-center gap-3">
            <div class="bg-accent rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" class="text-dark">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="fw-semibold text-white">Premium Quality</div>
              <div class="text-white-50 small">Handcrafted Daily</div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6 animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="position-relative">
          {% if section.settings.image != blank %}
            <div class="rounded-3 overflow-hidden shadow-gold">
              <img
                srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                        {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                        {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                        {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                        {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
                src="{{ section.settings.image | image_url: width: 1100 }}"
                sizes="(min-width: 990px) 1100px, (min-width: 750px) 750px, 375px"
                alt="{{ section.settings.image.alt | escape }}"
                loading="eager"
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.height }}"
                class="img-fluid rounded-3"
              >
            </div>
          {% else %}
            <div class="bg-gradient-to-br from-amber-100 to-yellow-200 rounded-3 d-flex align-items-center justify-content-center" style="aspect-ratio: 1; min-height: 400px;">
              <div class="text-center">
                <div class="bg-accent rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow-gold" style="width: 96px; height: 96px;">
                  <svg width="48" height="48" fill="currentColor" viewBox="0 0 24 24" class="text-dark">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </div>
                <div class="fw-bold text-dark fs-4">Premium Baklava</div>
              </div>
            </div>
          {% endif %}

          <!-- Floating Price Badge -->
          <div class="position-absolute top-0 end-0 bg-accent text-dark px-4 py-2 rounded-3 fw-bold fs-5 shadow-gold animate-glow" style="transform: translate(20px, -20px);">
            $49.99
          </div>

          <!-- Decorative Elements -->
          <div class="position-absolute top-0 start-0 bg-accent opacity-10 rounded-circle animate-float" style="width: 128px; height: 128px; transform: translate(-64px, -64px);"></div>
          <div class="position-absolute bottom-0 end-0 bg-accent-light opacity-20 rounded-circle animate-float" style="width: 96px; height: 96px; transform: translate(48px, 48px); animation-delay: 3s;"></div>
        </div>

        <!-- Product Highlights -->
        <div class="d-flex justify-content-center gap-4 mt-4">
          <div class="text-center">
            <div class="bg-accent opacity-20 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 64px; height: 64px;">
              <svg width="32" height="32" fill="currentColor" viewBox="0 0 24 24" class="text-accent">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <div class="text-white-50 small fw-semibold">Premium</div>
          </div>
          <div class="text-center">
            <div class="bg-accent opacity-20 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 64px; height: 64px;">
              <svg width="32" height="32" fill="currentColor" viewBox="0 0 24 24" class="text-accent">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="text-white-50 small fw-semibold">Authentic</div>
          </div>
          <div class="text-center">
            <div class="bg-accent opacity-20 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 64px; height: 64px;">
              <svg width="32" height="32" fill="currentColor" viewBox="0 0 24 24" class="text-accent">
                <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <div class="text-white-50 small fw-semibold">Artisan</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="position-absolute bottom-0 start-50 translate-middle-x mb-4 animate-float">
    <div class="border border-white opacity-30 rounded-pill d-flex justify-content-center" style="width: 24px; height: 40px;">
      <div class="bg-white opacity-50 rounded-pill mt-2" style="width: 4px; height: 8px;"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Premium Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Indulge in\nPremium Baklava\nExcellence"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Experience the finest handcrafted baklava, made with traditional recipes passed down through generations. Each piece tells a story of Ottoman heritage and culinary perfection."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Premium Baklava"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "Our Heritage"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image",
      "info": "Upload a premium baklava image (recommended: 1200x1200px)"
    }
  ],
  "presets": [
    {
      "name": "Premium Hero Banner",
      "settings": {
        "heading": "Indulge in\nPremium Baklava\nExcellence",
        "text": "Experience the finest handcrafted baklava, made with traditional recipes passed down through generations. Each piece tells a story of Ottoman heritage and culinary perfection.",
        "button_label": "Shop Premium Baklava",
        "secondary_button_label": "Our Heritage"
      }
    }
  ]
}
{% endschema %}
