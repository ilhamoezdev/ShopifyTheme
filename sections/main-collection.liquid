<div class="section-padding bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h1 class="display-3 fw-bold mb-4">
        {{ collection.title }}
      </h1>
      {% if collection.description != blank %}
        <div class="lead text-muted mx-auto" style="max-width: 800px;">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>

    {% if collection.products_count > 0 %}
      <div class="row g-4">
        {% for product in collection.products %}
          <div class="col-6 col-md-4 col-lg-3">
            {% render 'product-card', product: product %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="text-center py-5">
        <div class="card card-premium mx-auto" style="max-width: 400px;">
          <div class="card-body text-center py-5">
            <svg width="96" height="96" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="text-muted mb-3">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
            </svg>
            <h3 class="h5 fw-semibold mb-2">No products found</h3>
            <p class="text-muted mb-0">This collection doesn't have any products yet.</p>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 12,
      "label": "Products per page"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    }
  ]
}
{% endschema %}
