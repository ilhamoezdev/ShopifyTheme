<div class="section-padding bg-light">
  <div class="container">
    <div class="row g-5">
      <!-- Product Media -->
      <div class="col-lg-6 position-sticky" style="top: 100px;">
        <div class="mb-4">
          {% if product.selected_or_first_available_variant.featured_media != null %}
            <div class="card shadow-luxury rounded-3 overflow-hidden mb-4">
              <img
                srcset="{%- if product.selected_or_first_available_variant.featured_media.width >= 375 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 375 }} 375w,{%- endif -%}
                        {%- if product.selected_or_first_available_variant.featured_media.width >= 750 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 750 }} 750w,{%- endif -%}
                        {%- if product.selected_or_first_available_variant.featured_media.width >= 1100 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 1100 }} 1100w,{%- endif -%}
                        {{ product.selected_or_first_available_variant.featured_media | image_url }} {{ product.selected_or_first_available_variant.featured_media.width }}w"
                src="{{ product.selected_or_first_available_variant.featured_media | image_url: width: 1100 }}"
                sizes="(min-width: 990px) 1100px, (min-width: 750px) 750px, 375px"
                alt="{{ product.selected_or_first_available_variant.featured_media.alt | escape }}"
                loading="eager"
                width="{{ product.selected_or_first_available_variant.featured_media.width }}"
                height="{{ product.selected_or_first_available_variant.featured_media.height }}"
                id="ProductImage-{{ section.id }}"
                class="img-fluid w-100"
              >
            </div>
          {% endif %}

          {% if product.media.size > 1 %}
            <div class="row g-2">
              {% for media in product.media limit: 4 %}
                <div class="col-3">
                  <button
                    type="button"
                    class="btn btn-outline-secondary w-100 p-0 product-thumbnail"
                    data-media-id="{{ media.id }}"
                    style="aspect-ratio: 1; border: 2px solid transparent; transition: border-color 0.3s;"
                  >
                    <img
                      src="{{ media | image_url: width: 150 }}"
                      alt="{{ media.alt | escape }}"
                      loading="lazy"
                      width="150"
                      height="{{ 150 | divided_by: media.aspect_ratio | ceil }}"
                      class="img-fluid rounded"
                    >
                  </button>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Product Info -->
      <div class="col-lg-6">
        <div class="card card-premium shadow-luxury p-4">
          <h1 class="display-4 fw-bold mb-4">
            {{ product.title }}
          </h1>

          <div class="d-flex align-items-center gap-3 mb-4">
            {% if product.compare_at_price > product.price %}
              <span class="display-6 fw-bold text-accent">
                {{ product.price | money }}
              </span>
              <span class="fs-4 text-muted text-decoration-line-through">
                {{ product.compare_at_price | money }}
              </span>
            {% else %}
              <span class="display-6 fw-bold text-accent">
                {{ product.price | money }}
              </span>
            {% endif %}
          </div>

          {% if product.description != blank %}
            <div class="mb-4">
              {{ product.description }}
            </div>
          {% endif %}

          <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" id="product-form-{{ section.id }}" class="mb-4">
            {% unless product.has_only_default_variant %}
              <div class="mb-3">
                {% for option in product.options_with_values %}
                  <label for="Option-{{ section.id }}-{{ forloop.index0 }}" class="form-label fw-semibold mb-2">
                    {{ option.name }}
                  </label>
                  <select
                    id="Option-{{ section.id }}-{{ forloop.index0 }}"
                    name="options[{{ option.name | escape }}]"
                    form="product-form-{{ section.id }}"
                    class="form-select mb-3"
                  >
                    {% for value in option.values %}
                      <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>
                        {{ value }}
                      </option>
                    {% endfor %}
                  </select>
                {% endfor %}
              </div>
            {% endunless %}

            <div class="mb-3">
              <label for="Quantity-{{ section.id }}" class="form-label fw-semibold mb-2">Quantity</label>
              <input
                type="number"
                id="Quantity-{{ section.id }}"
                name="quantity"
                value="1"
                min="1"
                form="product-form-{{ section.id }}"
                class="form-control"
                style="max-width: 120px;"
              >
            </div>

            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" form="product-form-{{ section.id }}">

            <button
              type="submit"
              name="add"
              class="btn btn-accent btn-lg w-100"
              {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
            >
              {% if product.selected_or_first_available_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.product-thumbnail.active {
  border-color: #d4af37 !important;
}

.product-thumbnail:hover {
  border-color: #d4af37 !important;
}
</style>

{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "section",
  "settings": []
}
{% endschema %}
