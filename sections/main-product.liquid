<div class="section-padding bg-white">
  <div class="container-custom">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Product Media -->
        <div class="sticky top-24 self-start">
          <div class="space-y-4">
            {% if product.selected_or_first_available_variant.featured_media != null %}
              <div class="relative overflow-hidden rounded-2xl bg-gray-100 aspect-square">
                <img
                  srcset="{%- if product.selected_or_first_available_variant.featured_media.width >= 375 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 375 }} 375w,{%- endif -%}
                        {%- if product.selected_or_first_available_variant.featured_media.width >= 750 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 750 }} 750w,{%- endif -%}
                        {%- if product.selected_or_first_available_variant.featured_media.width >= 1100 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 1100 }} 1100w,{%- endif -%}
                        {{ product.selected_or_first_available_variant.featured_media | image_url }} {{ product.selected_or_first_available_variant.featured_media.width }}w"
                  src="{{ product.selected_or_first_available_variant.featured_media | image_url: width: 1100 }}"
                  sizes="(min-width: 990px) 1100px, (min-width: 750px) 750px, 375px"
                  alt="{{ product.selected_or_first_available_variant.featured_media.alt | escape }}"
                  loading="eager"
                  width="{{ product.selected_or_first_available_variant.featured_media.width }}"
                  height="{{ product.selected_or_first_available_variant.featured_media.height }}"
                  id="ProductImage-{{ section.id }}"
                  class="w-full h-full object-cover"
                >
              </div>
            {% endif %}
            
            {% if product.media.size > 1 %}
              <div class="grid grid-cols-4 gap-4">
                {% for media in product.media limit: 4 %}
                  <button
                    type="button"
                    class="product__media-thumbnail relative overflow-hidden rounded-lg border-2 border-transparent hover:border-gray-900 transition-colors aspect-square bg-gray-100"
                    data-media-id="{{ media.id }}"
                  >
                    <img
                      src="{{ media | image_url: width: 150 }}"
                      alt="{{ media.alt | escape }}"
                      loading="lazy"
                      width="150"
                      height="{{ 150 | divided_by: media.aspect_ratio | ceil }}"
                      class="w-full h-full object-cover"
                    >
                  </button>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Product Info -->
        <div class="space-y-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              {{ product.title }}
            </h1>
            
            <div class="flex items-center gap-4 mb-6">
              {% if product.compare_at_price > product.price %}
                <span class="text-4xl font-bold text-gray-900">
                  {{ product.price | money }}
                </span>
                <span class="text-2xl text-gray-500 line-through">
                  {{ product.compare_at_price | money }}
                </span>
              {% else %}
                <span class="text-4xl font-bold text-gray-900">
                  {{ product.price | money }}
                </span>
              {% endif %}
            </div>
          </div>

          {% if product.description != blank %}
            <div class="prose prose-lg max-w-none">
              {{ product.description }}
            </div>
          {% endif %}

          <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" id="product-form-{{ section.id }}" class="space-y-6">
            {% unless product.has_only_default_variant %}
              <div class="space-y-4">
                {% for option in product.options_with_values %}
                  <div>
                    <label for="Option-{{ section.id }}-{{ forloop.index0 }}" class="block text-sm font-semibold text-gray-900 mb-2">
                      {{ option.name }}
                    </label>
                    <select
                      id="Option-{{ section.id }}-{{ forloop.index0 }}"
                      name="options[{{ option.name | escape }}]"
                      form="product-form-{{ section.id }}"
                      class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-gray-900 transition-colors"
                    >
                      {% for value in option.values %}
                        <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>
                          {{ value }}
                        </option>
                      {% endfor %}
                    </select>
                  </div>
                {% endfor %}
              </div>
            {% endunless %}

            <div>
              <label for="Quantity-{{ section.id }}" class="block text-sm font-semibold text-gray-900 mb-2">Quantity</label>
              <input
                type="number"
                id="Quantity-{{ section.id }}"
                name="quantity"
                value="1"
                min="1"
                form="product-form-{{ section.id }}"
                class="w-32 px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-gray-900 transition-colors"
              >
            </div>

            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" form="product-form-{{ section.id }}">

            <button
              type="submit"
              name="add"
              class="w-full btn btn-primary text-lg py-5"
              {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
            >
              {% if product.selected_or_first_available_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "section",
  "settings": []
}
{% endschema %}
