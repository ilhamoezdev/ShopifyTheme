{
  "name": "premium-baklava-theme",
  "version": "1.0.0",
  "description": "Premium High-End Baklava Theme with Bootstrap 5 and React",
  "scripts": {
    "build": "sass assets/styles/main.scss assets/base.css --style=compressed",
    "watch": "sass --watch assets/styles/main.scss assets/base.css",
    "build:react": "webpack --mode production",
    "watch:react": "webpack --mode development --watch",
    "build:all": "npm run build && npm run build:react",
    "dev": "npm run watch & npm run watch:react"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.5",
    "babel-loader": "^9.1.3",
    "sass": "^1.94.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "@popperjs/core": "^2.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
