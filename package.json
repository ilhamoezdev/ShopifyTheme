{
  "name": "modern-shopify-theme",
  "version": "1.0.0",
  "description": "Modern Shopify Theme with Tailwind CSS and React",
  "scripts": {
    "build": "tailwindcss -i ./assets/input.css -o ./assets/base.css --minify",
    "watch": "tailwindcss -i ./assets/input.css -o ./assets/base.css --watch",
    "build:react": "webpack --mode production",
    "watch:react": "webpack --mode development --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.5"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

