<footer class="footer mt-5">
  <div class="container">
    <div class="row g-5 mb-5">
      <!-- Brand -->
      <div class="col-md-6 col-lg-3">
        <h3 class="footer-title">{{ shop.name }}</h3>
        <p class="text-white-50">{{ settings.footer_text }}</p>
      </div>

      <!-- Quick Links -->
      <div class="col-md-6 col-lg-3">
        <h4 class="footer-title">Quick Links</h4>
        <ul class="list-unstyled">
          {% for link in linklists.footer.links %}
            <li class="mb-2">
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact -->
      <div class="col-md-6 col-lg-3">
        <h4 class="footer-title">Contact</h4>
        <ul class="list-unstyled">
          {% if shop.email != blank %}
            <li class="mb-2">
              <a href="mailto:{{ shop.email }}" class="footer-link d-flex align-items-center gap-2">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
                {{ shop.email }}
              </a>
            </li>
          {% endif %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="col-md-6 col-lg-3">
        <h4 class="footer-title">Newsletter</h4>
        <p class="text-white-50 small mb-3">Stay updated with our latest offers</p>
        <form class="d-flex flex-column gap-2">
          <input
            type="email"
            placeholder="Your email"
            class="form-control bg-dark border-secondary text-white"
            style="border-radius: 0.75rem;"
          />
          <button type="submit" class="btn btn-accent">Subscribe</button>
        </form>
      </div>
    </div>

    <div class="border-top border-secondary pt-4">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
        <p class="text-white-50 small mb-0">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </p>
        <div class="d-flex gap-4">
          <a href="#" class="footer-link small">Privacy</a>
          <a href="#" class="footer-link small">Terms</a>
        </div>
      </div>
    </div>
  </div>
</footer>
