<footer class="bg-gray-900 text-white mt-20" role="contentinfo">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold mb-4">{{ shop.name }}</h3>
        <p class="text-gray-400 text-sm leading-relaxed">{{ settings.footer_text }}</p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors text-sm">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact</h4>
        <ul class="space-y-2">
          {% if shop.email != blank %}
            <li>
              <a href="mailto:{{ shop.email }}" class="text-gray-400 hover:text-white transition-colors text-sm">
                {{ shop.email }}
              </a>
            </li>
          {% endif %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Newsletter</h4>
        <p class="text-gray-400 text-sm mb-4">Stay updated with our latest offers</p>
        <form class="flex flex-col space-y-2">
          <input
            type="email"
            placeholder="Your email"
            class="px-4 py-2 rounded-lg bg-gray-800 text-white placeholder-gray-500 border border-gray-700 focus:outline-none focus:border-accent"
          />
          <button type="submit" class="btn btn-accent text-sm">Subscribe</button>
        </form>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-400 text-sm">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </p>
        <div class="flex space-x-6">
          <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">Privacy</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">Terms</a>
        </div>
      </div>
    </div>
  </div>
</footer>
