<header class="sticky top-0 z-50 glass-effect border-b border-gray-200 shadow-sm" role="banner">
  <div class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="{{ routes.root_url }}" class="flex items-center space-x-2 group">
          {% if settings.header_logo_text != blank %}
            <span class="text-2xl md:text-3xl font-bold text-gray-900 group-hover:text-accent transition-colors">
              {{ settings.header_logo_text }}
            </span>
          {% else %}
            <span class="text-2xl md:text-3xl font-bold text-gray-900 group-hover:text-accent transition-colors">
              {{ shop.name }}
            </span>
          {% endif %}
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8" role="navigation" aria-label="Main">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" class="text-gray-700 hover:text-gray-900 font-medium transition-colors relative group">
            {{ link.title }}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
          </a>
        {% endfor %}
      </nav>

      <!-- Actions -->
      <div class="flex items-center space-x-4">
        {% if settings.show_search %}
          <a href="{{ routes.search_url }}" class="p-2 text-gray-700 hover:text-gray-900 transition-colors" aria-label="Search">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </a>
        {% endif %}
        
        <a href="{{ routes.cart_url }}" class="cart-link relative p-2 text-gray-700 hover:text-gray-900 transition-colors" aria-label="Cart">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </a>

        <!-- Mobile Menu Button -->
        <button class="md:hidden p-2 text-gray-700" aria-label="Menu" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-200 mt-4">
      <nav class="flex flex-col space-y-4 pt-4">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>
    </div>
  </div>
</header>
