<meta property="og:type" content="website">
<meta property="og:title" content="{{ page_title | escape }}">
<meta property="og:url" content="{{ canonical_url }}">
{% if page_description %}
  <meta property="og:description" content="{{ page_description | escape }}">
{% endif %}
<meta property="og:site_name" content="{{ shop.name }}">

{% unless settings.social_image == blank %}
  <meta property="og:image" content="http:{{ settings.social_image | image_url: width: 1200 }}">
  <meta property="og:image:secure_url" content="https:{{ settings.social_image | image_url: width: 1200 }}">
  <meta name="twitter:card" content="summary_large_image">
{% endunless %}

<meta name="twitter:title" content="{{ page_title | escape }}">
{% if page_description %}
  <meta name="twitter:description" content="{{ page_description | escape }}">
{% endif %}

